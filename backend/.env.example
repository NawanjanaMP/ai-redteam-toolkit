# AI Red-Teaming Toolkit - Environment Configuration
# File: backend/.env.example
# Copy this to .env and update with your values

# ==================== Application ====================
APP_NAME=AI Red-Teaming Toolkit
APP_VERSION=1.0.0
DEBUG=False
ENVIRONMENT=production

# ==================== API Settings ====================
API_V1_PREFIX=/api/v1
CORS_ORIGINS=http://localhost:3000,https://yourdomain.com

# ==================== Security ====================
# IMPORTANT: Change these in production!
SECRET_KEY=your-super-secret-key-change-this-in-production
API_KEY=your-api-key-here

# ==================== Cache/Redis ====================
REDIS_URL=redis://localhost:6379/0
CACHE_TTL=3600
CACHE_ENABLED=True

# ==================== Rate Limiting ====================
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_PER_HOUR=1000
ENABLE_RATE_LIMITING=True

# ==================== Logging ====================
LOG_LEVEL=INFO
LOG_FILE=logs/app.log

# ==================== Attack Configuration ====================
MAX_ATTACK_PAYLOAD_LENGTH=10000
DEFAULT_ATTACK_INTENSITY=medium
ENABLE_ADVANCED_ATTACKS=True

# ==================== Testing ====================
MAX_CONCURRENT_TESTS=10
TEST_TIMEOUT_SECONDS=300
SAVE_TEST_RESULTS=True
RESULTS_RETENTION_DAYS=30

# ==================== Model Integration (Optional) ====================
# If you want to test against actual LLM APIs
OPENAI_API_KEY=
ANTHROPIC_API_KEY=
MODEL_ENDPOINT=
MODEL_TIMEOUT=30

# ==================== Database (Optional) ====================
# For persistent storage of test results
DATABASE_URL=
DB_POOL_SIZE=10
DB_MAX_OVERFLOW=20

# ==================== Monitoring ====================
ENABLE_METRICS=True
METRICS_PORT=9090